<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_light_focused"
    tools:context=".UIReview">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_dark"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password                 Recovery"
                android:gravity="center"
                android:drawableTop="@drawable/ic_baseline_restore_24"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="35sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your email and instructions will be sent to you!"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:paddingLeft="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/etemailrec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#006200EE"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="15dp"
                    android:hint="\@ Email"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="405dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/recov_recaptcha_bgd">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" I'm not a robot"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:textSize="25dp"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_check_box_big"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnreset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30sp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_background"
                android:text="Reset"
                android:textColor="@color/cardview_light_background"
                android:textAllCaps="false"
                android:textSize="22sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>